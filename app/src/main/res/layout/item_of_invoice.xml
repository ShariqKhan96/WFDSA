<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelname"
        android:text="Name: "
        android:textSize="14sp"
        />

    <TextView
        android:layout_marginLeft="7dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invoicename"
        android:text="Invoice Name"
        android:layout_toRightOf="@+id/labelname"
        />

    <TextView
        android:layout_below="@+id/invoicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelQty"
        android:text="Qunatity: "
        android:textSize="14sp"
        />

    <TextView
        android:layout_marginLeft="18dp"
        android:textSize="14sp"
        android:layout_below="@+id/invoicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invoicequantity"
        android:text="Invoice Qunatity"

        android:layout_toRightOf="@+id/labelname"
        />


    <TextView
        android:layout_below="@+id/invoicequantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelPrice"
        android:text="Price: "
        android:textSize="14sp"
        />

    <TextView

        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incvoiceprice"
        android:text="Invoice Price"
        android:layout_below="@+id/labelQty"
        android:layout_alignStart="@+id/total" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelTotal"
        android:text="Total: "
        android:textSize="14sp"
        android:layout_below="@+id/labelPrice"
        android:layout_alignEnd="@+id/labelPrice" />

    <TextView

        android:textSize="14sp"
        android:layout_below="@+id/incvoiceprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:text="Total"
        android:layout_toRightOf="@+id/labelname"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/incvoiceprice"
        >

    </View>
</RelativeLayout>