<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserPic"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:civ_border_color="#20000000"
        app:civ_border_width="1dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PERSON NAME"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toRightOf="@+id/ivUserPic"
        android:layout_marginLeft="8dp"
        android:id="@+id/tvUserName"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@+id/ivUserPic"
        android:layout_marginTop="21dp"
        app:layout_constraintRight_toLeftOf="@+id/ivSignOut"
        android:layout_marginRight="8dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="user@gmail.com"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        app:layout_constraintLeft_toRightOf="@+id/ivUserPic"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/ivSettings"
        android:layout_marginRight="8dp"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/ivSignOut"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_sign_out"
        app:layout_constraintTop_toTopOf="@+id/ivUserPic"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:background="?attr/selectableItemBackground"/>
    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ivSignOut"
        android:src="@drawable/ic_user_settings"
        android:layout_marginRight="19dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserPic"
        android:layout_marginBottom="16dp"
        android:padding="4dp"
        android:background="?attr/selectableItemBackground"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ivUserPic"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@android:color/darker_gray"/>

</android.support.constraint.ConstraintLayout>